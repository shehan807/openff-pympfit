	urldate = {2025-10-07},
	journal = {Journal of Chemical Theory and Computation},
	author = {Kanhaiya, Krishan and Nathanson, Michael and in ’t Veld, Pieter J. and Zhu, Cheng and Nikiforov, Ilia and Tadmor, Ellad B. and Choi, Yeol Kyo and Im, Wonpil and Mishra, Ratan K. and Heinz, Hendrik},
	month = nov,
	year = {2023},
